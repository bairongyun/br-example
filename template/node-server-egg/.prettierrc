{
  "semi": false,
  "singleQuote": true,
  "jsxSingleQuote": true,
  "printWidth": 140,
  "tabWidth": 4,
  "trailingComma": "none",
  "arrowParens": "avoid",
  "overrides": [
    {
      "files": ".prettierrc",
      "options": {
        "parser": "json"
      }
    },
    {
      "files": ["*md"],
      "options": { "tabWidth": 2, "parser": "markdown" }
    }
  ]
}
